<BreakerBall>:
    size: 40, 40
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size          

<BreakerPaddle>:
    size: 200, 25
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<BreakerGame>:
    ball: breaker_ball
    player: breaker_player
    
    BreakerBall:
        id: breaker_ball
        center: self.parent.center
        
    BreakerPaddle:
        id: breaker_player
        center_x: root.center_x
        center_y: self.height
        